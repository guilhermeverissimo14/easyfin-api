{
   "name": "easyfin-backend",
   "version": "1.0.0",
   "main": "index.js",
   "engines": {
      "node": ">=20.0.0"
   },
   "scripts": {
      "copy-public": "mkdir -p dist/public && [ -d public ] && cp -R public/* dist/public",
      "dev": "rimraf dist && tsc -p tsconfig.json && tsx watch --env-file-if-exists=.env src/index.ts",
      "dev-old": "tsx watch src/index.ts",
      "build": "rimraf dist && tsc -p tsconfig.json && npm run copy-public",
      "postbuild": "npm run copy-public",
      "start": "node dist/index.js",
      "start:prod": "rimraf dist && tsc -p tsconfig.json && npm run postbuild && node --max-old-space-size=4096 -r tsconfig-paths/register dist/src/index.js",
      "seed": "ts-node prisma/seed.ts",
      "import-customers": "tsx --env-file-if-exists=.env src/scripts/import-customers.ts",
      "import-invoices": "tsx --env-file-if-exists=.env src/scripts/import-invoices.ts",
      "import-cash-book": "tsx --env-file-if-exists=.env src/scripts/import-cash-book.ts",
      "check-values": "tsx --env-file-if-exists=.env src/scripts/check-values.ts"
   },
   "prisma": {
      "seed": "tsx prisma/seed.ts",
      "generate": "tsx prisma/generate.ts"
   },
   "keywords": [],
   "author": "Eduardo Trindade & Guilherme Ver√≠ssimo",
   "license": "ISC",
   "description": "",
   "dependencies": {
      "@fastify/cors": "^10.0.2",
      "@fastify/multipart": "^9.0.3",
      "@fastify/static": "^8.0.2",
      "@fastify/swagger": "^9.4.2",
      "@fastify/swagger-ui": "^5.2.1",
      "@prisma/client": "^6.3.1",
      "@types/ws": "^8.18.1",
      "bcrypt": "^5.1.1",
      "date-fns": "^4.1.0",
      "fastify": "^5.2.1",
      "jsonwebtoken": "^9.0.2",
      "module-alias": "^2.2.3",
      "node-cron": "^4.1.0",
      "nodemailer": "^6.10.0",
      "prisma": "^6.3.1",
      "tsconfig-paths": "^4.2.0",
      "ws": "^8.18.3",
      "xlsx": "^0.18.5",
      "zod": "^3.24.1"
   },
   "devDependencies": {
      "@types/bcrypt": "^5.0.2",
      "@types/jsonwebtoken": "^9.0.8",
      "@types/module-alias": "^2.0.4",
      "@types/node": "^22.13.1",
      "@types/nodemailer": "^6.4.17",
      "nodemon": "^3.1.9",
      "ts-node": "^10.9.2",
      "tsx": "^4.19.2",
      "typescript": "^5.7.3"
   }
}
