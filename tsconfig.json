{
  "compilerOptions": {
    "target": "ES2020",                                  
    "module": "commonjs",                                
    "rootDirs": ["src", "prisma", "public"],                                  
    "baseUrl": "src",                                  
    "paths": {
      "@/*": ["*"],
       "@/prisma/*":["prisma/*"],
    },
    "outDir": "dist",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "resolveJsonModule": true                                    
  },
  "include": ["src", "prisma", "public"],
  "exclude": ["node_modules"],
  "env": {
    "node": true,
  }
}
