{
  "compilerOptions": {
    "target": "ES2020",                                  
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "baseUrl": "./src",                                  
    "paths": {
      "@/*": ["*"],
    },
    "outDir": "./dist",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "env": {
    "node": true,
  }
}
